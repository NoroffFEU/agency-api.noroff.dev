{
  "name": "noroff-job-agency-api",
  "version": "0.0.1",
  "description": "A web application to allow students to interact with industry partners to find placements",
  "main": "index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node src/app.js",
    "watch": "nodemon src/app.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install",
    "test": "npm run test-unit",
    "test-unit": "jest --coverage --verbose --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoroffFEU/agency-api.noroff.dev.git"
  },
  "keywords": [
    "Noroff",
    "Jobs"
  ],
  "author": "Noroff",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NoroffFEU/agency-api.noroff.dev/issues"
  },
  "homepage": "https://github.com/NoroffFEU/agency-api.noroff.dev#readme",
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "jsonwebtoken": "^9.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "axios": "^1.2.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-plugin-jest": "^27.2.1",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^2.8.2",
    "prisma": "^5.8.0",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
